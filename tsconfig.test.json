{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": [
      "es2017",
      "dom"
    ],
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmitOnError": true,
    "removeComments": false,
    "keyofStringsOnly": true,
    "resolveJsonModule": true,
    "outDir": "dist-test"
  },
  "include": [
    "./src",
    "./test"
  ]
}