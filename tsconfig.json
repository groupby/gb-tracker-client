{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",
    "declaration": false,
    "moduleResolution": "node",
    "noEmit": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src",
    "./test"
  ]
}